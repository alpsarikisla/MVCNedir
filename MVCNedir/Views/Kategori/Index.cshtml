@using MVCNedir.Models;
@model IEnumerable<Categories>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Assets/css/pagedesign.css" rel="stylesheet" />
    <link href="~/Assets/css/tabledesign.css" rel="stylesheet" />
    <link href="~/Assets/css/formdesign.css" rel="stylesheet" />
</head>
<body>
    <div class="form">
        <div class="form-title">
            <h3>Kategoriler</h3>
        </div>
        <div class="form-content">
            <table cellpadding="0" cellspacing="0">
                <tr>
                    <th>ID</th>
                    <th>Isim</th>
                    <th>Açıklama</th>
                    <th>Seçenekler</th>
                </tr>
                @foreach (Categories item in Model)
                {
                    <tr>
                        <td>@item.CategoryID</td>
                        <td>@item.CategoryName</td>
                        <td>@item.Description</td>
                        <td>
                            @*<a href="@Url.Action("Duzenle", "Kategori", new { id = item.CategoryID })">Düzenle</a>*@

                            @{string url = $"/Kategori/Duzenle/{item.CategoryName}/{item.CategoryID}";}
                            <a href="@url" class="duzenle">Düzenle</a>
                            <a href="@Url.Action("Sil", "Kategori", new { id = item.CategoryID })" class="sil">Sil</a>
                        </td>
                    </tr>
                }
            </table>
        </div>

    </div>
</body>
</html>
